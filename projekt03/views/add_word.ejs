<%- include("partials/head.ejs") %>

<main>

    <h1><b><i>Dodaj nowe słowo do wybranej kategorii:</i></b></h1>
    
    <% if (is_game_active) { %>
        <span>Nie można dodawać słów w trakcie gry!<br>Zakończ grę, aby móc dodawać nowe słowa</span>
    <% } else { %>
        <% if (categories.length > 0){ %>
            <%- include("partials/forms/new_word.ejs", { categories: categories }) %>
        <% } else { %>
            <span>Nie istnieją jeszcze żadne kategorie!</span> 
        <% } %>
    <% } %>

</main>

